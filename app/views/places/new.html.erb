<h2>Add a New Place</h2>

<form action="/places/submit_new">

	<p><span class="class">Title:</span>
	<%= text_field_tag :title, "", size:30, maxsize:30, required:true %></p>

	<p><span class="class">Photo URL:</span> 
	<%= text_field_tag :photo_url, "" , size:100, maxsize:200, required:true %></p>  

	<p><span class="class">Price:</span>
	<%= text_field_tag :admission_price, "" , required:true %></p>  		

	<p><span class="class">Description:</span></p>
	<%= text_area_tag :description, "", rows:4, cols:50, required:true %></p>  		

	<p><%= submit_tag "submit" %></p>
</form>